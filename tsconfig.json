{
  "compilerOptions": {
    "allowJs": false,
    "outDir": "./dist/",
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "strict": true
  },
  "include": [
    "./src/**/*"
  ]
}
